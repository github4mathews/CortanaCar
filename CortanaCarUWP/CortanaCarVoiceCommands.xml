<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.1">
  <CommandSet xml:lang="en-us" Name="CortanaCarVoiceCommands_en-us">
    <CommandPrefix>Please</CommandPrefix>
    <Example>Please go ahead, stop, backward, turn left, turn right</Example>

    <Command Name="MoveForward">
      <Example>Please go ahead</Example>
      <ListenFor>go ahead</ListenFor>
      <Feedback>moving forward.</Feedback>
      <Navigate/>
    </Command>

    <Command Name="MoveBackward">
      <Example>backward</Example>
      <ListenFor>backward</ListenFor>
      <ListenFor>move backward</ListenFor>
      <Feedback>moving backward.</Feedback>
      <Navigate/>
    </Command>

    <Command Name="StopMoving">
      <Example>stop</Example>
      <ListenFor>stop</ListenFor>
      <Feedback>now stopping.</Feedback>
      <Navigate/>
    </Command>

    <Command Name="TurnLeft">
      <Example>Please turn left your body</Example>
      <ListenFor>turn left your body</ListenFor>
      <ListenFor>turn the left</ListenFor>
      <ListenFor>turn left</ListenFor>
      <Feedback>turning left.</Feedback>
      <Navigate/>
    </Command>

    <Command Name="TurnRight">
      <Example>Please turn right your body</Example>
      <ListenFor>turn right your body</ListenFor>
      <ListenFor>turn the left</ListenFor>
      <ListenFor>turn right</ListenFor>
      <Feedback>turning right.</Feedback>
      <Navigate/>
    </Command>

  </CommandSet>
</VoiceCommands>